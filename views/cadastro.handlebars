    <div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-6 ">
            <main>
                <section class="container align-items-center">
                    <form action="/enviar-cadastro" method="post">
        
                        <!-- section geral de todo os dados. --> 
                        <section id="dadosPessoais">

                            <div  class="text-center">
                                <img src="https://i.imgur.com/PAxPaoQ.png?1" alt="">
                            </div>
                            <p>(*) Campos Obrigatórios </p>
            
                            <!-- div de dados iniciais --> 
                                <div class="">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1" for="name">Nome*</span>
                                        <input name="nome" class="form-control" type="text" aria-label="Username" aria-describedby="basic-addon1" id="name" placeholder="EX: Frederico Josefino da silva lima" required>
                                    </div>
        
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1" for="surname">Sobrenome*</span>
                                        <input name="sobrenome" type="text" id="sobrenome"class="form-control" placeholder="Sobrenome" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>

                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1" for="email">E-mail*</span>
                                        <input name="email" type="email" id="email"class="form-control" placeholder="Email" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>

                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1" for="senha">Senha*</span>
                                        <input name="senha" type="password" id="email"class="form-control" placeholder="Crie sua senha de acesso" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>

                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1" for="cpf">CPF*</span>
                                        <input name="cpf" type="text" id="cpf" class="form-control" placeholder="CPF" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>
        
                                    <hr>
                                    <P>Endereço</P>
                                    
                                    <div class="input-group mb-3">
                                        <span type="cep" class="input-group-text" id="basic-addon1" for="cep">CEP*</span>
                                        <input name="cep" type="text" id="cep" data-tipo="logradouro" class="form-control" placeholder="CEP" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>

                                    <div class="input-group mb-3">
                                        <span type="rua" class="input-group-text" id="basic-addon1" for="rua">Rua*</span>
                                        <input name="rua" type="text" id="cep" data-tipo="logradouro" class="form-control" placeholder="Rua" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>
                                    
                                    <div class="input-group mb-3">
                                        <span type="numero" class="input-group-text" id="basic-addon1" for="numero">Número</span>
                                        <input name="numero" type="text" id="numero" data-tipo="numero" class="form-control" placeholder="Numero" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    </div>

                                    <div class="input-group mb-3">
                                        <span type="bairro" class="input-group-text" id="basic-addon1" for="bairro">Bairro*</span>
                                        <input name="bairro" type="text" id="bairro" data-tipo="bairro" class="form-control" placeholder="Bairro" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>

                                    <div class="input-group mb-3">
                                        <span type="cidade" class="input-group-text" id="basic-addon1" for="cidade">Cidade*</span>
                                        <input name="cidade" type="text" id="cidade" data-tipo="cidade" class="form-control" placeholder="Cidade" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span type="estado" class="input-group-text" id="basic-addon1" for="estado">Estado*</span>
                                        <input name="estado" type="text" id="estado" data-tipo="estado" class="form-control" placeholder="Estado" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                                    </div>

                                <div class=" text-center">
                                    <input type="submit" class="btn btn-info mr-3" value="Cadastrar">
                                    <a class="btn btn-danger" type="submit" href="/index">Cancelar</a>
                                    
                                    
                                </div>
                
                        </section>
                    </form>
                </section>
            
        </div>
    </div>
    </div>

    

       
